#!/usr/bin/env bash

attach=true
if [[ "$1" == "-s" ]]; then
    attach=false
    shift
fi

if [[ $# -eq 1 ]]; then
    selected=$1
    mkdir -p "$selected"
else
    selected=$(find ~/git ~/git/personal -mindepth 1 -maxdepth 1 -type d | fzf --layout reverse)
fi

[[ -z "$selected" ]] && exit 0

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    if $attach; then
        tmux new-session -s "$selected_name" -c "$selected"
    else
        tmux new-session -ds "$selected_name" -c "$selected"
    fi
    exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi

$attach && tmux switch-client -t "$selected_name"

